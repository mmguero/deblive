  customtkinter \
  Cython \
  dataset \
  dateparser \
  debinterface \
  defopt \
  dhcpwn \
  dtrx \
  entrypoint2 \
  fierce \
  git+https://github.com/badele/gitcheck.git \
  git-up \
  habu \
  humanhash3 \
  ipaddress \
  magic-wormhole \
  mitmproxy \
  mmguero \
  monkeyplug \
  montag-cleaner \
  more-itertools \
  netmiko \
  ordered-set \
  pandas \
  patool \
  Pillow \
  psutil \
  py-cui \
  pycryptodome \
  pyinotify \
  pyinputplus \
  pyshark \
